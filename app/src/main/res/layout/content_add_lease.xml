<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddLeaseActivity"
    tools:showIn="@layout/activity_add_lease">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="会议开始时间："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_start_time"
                android:text="开始时间"
                android:layout_weight="5"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="会议结束时间："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_finish_time"
                android:text="结束时间"
                android:layout_weight="5"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="　预计总人数："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_num"
                android:text="30"
                android:layout_weight="5"
                android:inputType="number"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="　　会议主题："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_theme"
                android:text=""
                android:layout_weight="5"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="　　会议用途："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_usage"
                android:text=""
                android:layout_weight="5"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="　　额外留言："
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:labelFor="@id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_message"
                android:text=""
                android:hint="会议室的要求、服务安排等"
                android:layout_weight="5"
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />
        
        <CheckBox
            android:id="@+id/cb_sweep"
            android:text="场地清理服务"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cb_entertain"
            android:text="现场招待服务"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cb_remote"
            android:text="远程视频服务"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/tv_usedDay"
            android:text="申请 即代表您已阅读并同意我们的“租约条款”"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_signout"
            android:text="申请租约"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>